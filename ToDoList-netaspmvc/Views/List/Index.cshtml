@model IEnumerable<ToDoList_DomainModel.ViewModels.ToDoListViewModel>
@{
    bool noLists = (bool)ViewData["NoLists"];
}

<h1>Your To Do Lists</h1>
@{
    if (noLists)
    {
        <h2>There are currently no Lists. You can create them by clicking the button below.</h2>
    }
}
<p>
    <a class="button" asp-controller="List" asp-action="Create">Add new List</a>
</p>

@foreach (var list in Model)
{
    <partial name="ListSummary" model="list"/>
}