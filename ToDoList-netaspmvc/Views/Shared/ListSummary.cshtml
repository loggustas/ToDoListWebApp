@using ToDoList_netaspmvc.Models.ViewModels
@model ToDoListViewModel

<div class="card card-outline-primary m-1 p-1" style="background-color:#F5D7E3">
    <div class="bg-faded p-1">
        <h4>
            @Model.Name
            @{
                <span class="badge badge-pill badge-primary" style="float:right; background-color: #c26994">@Model.RecordCount records</span>
            }
        </h4>
    </div>

    <div>
        <span class="card-text p-1">
            <span style="vertical-align:middle">@Model.Description</span>
            <a asp-controller="List" asp-action="Index" asp-route-id="@Model.Id" class="buttonView" style="float:right">
                View
            </a>
            <a asp-controller="Home" asp-action="Edit" asp-route-id="@Model.Id" class="buttonEdit" style="float:right">
                Edit
            </a>
            <a asp-controller="Home" asp-action="DeleteList" asp-route-id="@Model.Id" asp-route-hideCompleted="@false" class="buttonDelete" style="float:right">
                Delete
            </a>
            <a asp-controller="Home" asp-action="Copy" asp-route-id="@Model.Id" class="button" style="float:right">
                Copy
            </a>
        </span>
    </div>
</div>
