@model ToDoList

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Name
        </h4>
    </div>

    <div>
        <span class="card-text p-1">
            @Model.Description
            <a asp-controller="List" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-success btn-sm pull-right" style="float:right">
                View
            </a>
            <a asp-controller="Home" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success btn-sm pull-right" style="float:right">
                Edit
            </a>
        </span>
    </div>
</div>